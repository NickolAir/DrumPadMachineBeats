<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mylayout"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:id="@+id/btnrec"
            android:text="REC" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/blue_pad"
            android:layout_margin="5dp"
            android:onClick="playsample1"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/blue_pad"
            android:layout_margin="5dp"
            android:onClick="playsample2"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/blue_pad"
            android:layout_margin="5dp"
            android:onClick="playsample3"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_pad"
            android:layout_margin="5dp"
            android:onClick="playsample4"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/puprple_pad"
            android:layout_margin="5dp"
            android:onClick="playsample5"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/green_pad"
            android:layout_margin="5dp"
            android:onClick="playsample6"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/puprple_pad"
            android:layout_margin="5dp"
            android:onClick="playsample7"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/orange_pad"
            android:layout_margin="5dp"
            android:onClick="playsample8"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/pink_pad"
            android:layout_margin="5dp"
            android:onClick="playsample9"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/orange_pad"
            android:layout_margin="5dp"
            android:onClick="playsample10"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/green_pad"
            android:layout_margin="5dp"
            android:onClick="playsample11"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <Button
            android:background="@drawable/pink_pad"
            android:layout_margin="5dp"
            android:onClick="playsample12"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/btnpresset"
            android:text="Presets" />
    </LinearLayout>
</LinearLayout>